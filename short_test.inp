##################################################################################
#                                                                                #
# Input file of stochastic simulation for Associating Telechelic Polymers        #
# Developer: Gun Woo Park (gunwoo.park@unina.it)                                 #
#                                                                                #
# Note that single input file runs single computation while sequence of input    #
# arguments for execution will run all of test following sequence of input files #
#                                                                                #
##################################################################################

 
## Basic Methodological input
## Method: BROWNIAN, DUMBBELL, REPULSIVE_BROWNIAN, NAPLE_ASSOCIATION
## Step: EQUILIBRIATION, NO_EQUILIBRIATION
## Stochastic Integrator: Only 'Euler' is applied at this moment

Method=NAPLE_ASSOCIATION
Step=NO_EQUILIBRATION
Integrator=Euler

## Spatial Dimensionality
N_dimension=3
box_dimension=10.0

## Time scales and data resolutions
dt/tauR=0.01
Nt=10000
reset_initial_time=TRUE
### when the topological update is allowed
N_steps_block=10
Rt=10
### related with data resolution
N_skip_ener=10
N_skip_file=1000
record_RDIST=TRUE
N_skip_rdist=1000

## for Parallel Langevin Equations
N_THREADS_BD=4
### for topological update: Note that it must be 1 at this moment
N_THREADS_SS=1

## Particle Information
Np=400
### related with repulsive contribution between particles
repulsion_coefficient=100
effective_distance=1.0


## chain information
N_chains_per_particle=10
### it allows to track all the index of individual chain ends
tracking_individual_chain=TRUE
### typical dissociation check
transition_probability=DISSOCIATION
### probability to select the specific chain (end)
chain_selection=UNIFORM
### number of allowed fluctuation for chain ends per micelle
tolerance_allowing_connections=3
### stochastic cut-off for bridge forming
cutoff_connection=2.0
### length scale related with physical aggregation in hydrophobic chain ends
l_cap=0.12

### chain properties: Gaussian, Modified_Gaussian, FENE
connector=Modified_Gaussian
#### related with re-scaling factor, alpha:= R0/rms(R_chain)
scale_factor_chain=1.5

### some other features
allowing_multiple_connections=TRUE
MC_renewal=FALSE
cell_list=TRUE

## related with mechanical perturbation: FALSE, SIMPLE_SHEAR, STEP_SHEAR
MECHANICAL_PERTURBATION=FALSE
### axis (0, 1, 2) = (x, y, z)
shear_axis=0
shear_grad_axis=1
### tau_C depends on the definition of the system
### note that this definition will be chainged in the future
Wi_tau_C=0

## random seeds: it is related with the random sampling and average over it
### in the case for SCoPE grid server, the automatic submission will be varied depends on the 
basic_random_seed=100
### random seeds for stochastic evolution
basic_random_seed_SS=150


# file information
output_path=short_test
filename_base=NP0400_LD10P3_C100
CONTINUATION_TRAJ=TRUE
CONTINUATION_CONNECTION=FALSE
CONTINUATION_CHAIN=FALSE
CONTINUATION_TRAJ_FN=LD10P3/EQ3D_NP0400_LD10P3.traj
CONTINUATION_HASH_FN=FALSE
CONTINUATION_WEIGHT_FN=FALSE
CONTINUATION_CHAIN_FN=FALSE
MC_LOG=FALSE


# unncessary options at this moment
# tolerance_association=0.001
# ratio_RM_R0=11
