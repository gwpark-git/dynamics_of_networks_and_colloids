// Basic Methodological input
// Method: BROWNIAN, DUMBBELL, REPULSIVE_BROWNIAN, NAPLE_ASSOCIATION
// Step: EQUILIBRIATION, NO_EQUILIBRIATION
// Integrator: Only 'Euler' is applied at this moment

Method=NAPLE_ASSOCIATION
Step=NO_EQUILIBRATION
Integrator=Euler

// Time scales and data resolutions
// it allows to track all the index of individual chain ends
tracking_individual_chain=TRUE
// for Parallel Langevin Equations
N_THREADS_BD=4
// for topological update: Note that it must be 1 at this moment
N_THREADS_SS=1
// Spatial Dimensionality. 
N_dimension=3
// Box dimension. At this moment, only box with the same size for each axis is allowed
box_dimension=10.0
// Number of particles in the system
Np=400
// total time step.
Nt=10000
// base time step
dt/tauR=0.01
// number of skipping for topological update
N_steps_block=10
// time scale ratio between 
Rt=10
N_skip_ener=10
N_skip_file=1000
record_RDIST=TRUE
N_skip_rdist=1000
reset_initial_time=TRUE
output_path=short_test
filename_base=NP0400_LD10P3_C100
transition_probability=DISSOCIATION
chain_selection=UNIFORM
repulsion_coefficient=100
effective_distance=1.0
N_chains_per_particle=10
tolerance_allowing_connections=3
tolerance_association=0.001
allowing_multiple_connections=TRUE
connector=Modified_Gaussian
cutoff_connection=2.0
cell_list=TRUE
scale_factor_chain=1.5
ratio_RM_R0=11
l_cap=0.12
MC_LOG=FALSE
MC_renewal=FALSE
CONTINUATION_TRAJ=TRUE
CONTINUATION_CONNECTION=FALSE
CONTINUATION_CHAIN=FALSE
CONTINUATION_TRAJ_FN=LD10P3/EQ3D_NP0400_LD10P3.traj
CONTINUATION_HASH_FN=FALSE
CONTINUATION_WEIGHT_FN=FALSE
CONTINUATION_CHAIN_FN=FALSE
basic_random_seed=100
basic_random_seed_SS=150
MECHANICAL_PERTURBATION=FALSE
shear_axis=0
shear_grad_axis=1
Wi_tau_C=0